<% if(message.length >0){ %>
  <div class="alert alert-warning alert-dismissible" style="position: absolute;
	top: 0px;
	right: 1%;
	height: 100px;
	width: 400px;
	z-index: 99;">
    <button type="button" id="btn" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>

    </button>
    <%= message %>
  </div>
  <% } %>
    <% layout("layout") -%>
      <div class="col-sm-3" style=" padding: 10px; margin-top: 50px;">
        <div class="col-lg-12">
          <% include ../partials/adminpanel %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="container">

          <div class="panel panel-info  col-sm-9" id="myScrollspy" style="padding: 0px; margin-top: 80px; min-height:500px;">

            <div class="panel-heading" style="color: #ffffff;">
              Manage Registration

            </div>
            <br>
            <form id="delete-form" action="/manage" method="GET">
            <select class="btn btn-default" name="sort">
              <option> Select an option.. </option>
              <option value="lastname">Sort By Last Name </option>
            </select>
            <button class="btn btn-info">Sort</button>
            </form>
            <br/>
            <div class="table-responsive">
              <div style="overflow-y: scroll; height:450px; ">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th style="color: #ffffff; background-color: #020531;">Name</th>
                      <th style="color: #ffffff; background-color: #020531;">Status</th>
                      <th style="color: #ffffff; background-color: #020531;">Date Submitted</th>
                      <th style="color: #ffffff; background-color: #020531;">Manage Account</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% allPending.forEach(function(pending){ %>

                      <tr>
                        <td>
                          <%=pending.lastName %>,
                            <%= pending.firstName %>
                              <%= pending.middleName %>
                        </td>
                        <td>
                          <%= pending.status %>
                        </td>
                        <td>
                          <%= moment(pending.date).format('LL')%>

                        </td>
                        <td>
                          <a class="btn btn-info btn-sm" href="/manage/<%= pending._id %>">Accept</a>
                          <form id="delete-form" action="/manage/<%= pending._id %>?_method=DELETE" method="POST">
                            <!-- Trigger the modal with a button -->
                            <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Delete</button>

                            <!-- Modal -->
                            <div id="myModal" class="modal fade" role="dialog">
                              <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                  <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Delete the pending user</h4>
                                  </div>
                                  <div class="modal-body">
                                    <p>Are you sure you want to delete this?</p>
                                  </div>
                                  <div class="modal-footer">
                                    <button class="btn btn-default">YES</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </form>
                        </td>
                      </tr>
                      <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>

      </div>