    <div class="news_wrapper top_news_wrapper">
      <center>
        <h2>What's New?</h2>
      </center>
      <br>
      <div class="col-md-6 news_wrapper btm_news_wrapper">
        <div class="panel panel-info" style="min-height: 200px">
          <div class="panel-heading">
            <h4>
              <a href="/news"> NEWS </a>
            </h4>
          </div>
          <div class="panel-body" style=" overflow-y: scroll; height: 180px;" align="center">
            <% if(news){ %>
              <h4>
                <%- news.title %>
              </h4>
              <p>
                <%- news.content %>
              </p>
              <% }else{ %>
                No news found!
                <% } %>
          </div>

        </div>
      </div>

      <div class="col-md-6 news_wrapper btm_news_wrapper">
