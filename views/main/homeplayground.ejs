          </div>
          <div class="panel-body" style=" overflow-y: scroll; height: 180px;" align="center">
            <% if(announcements){ %>
              <h4>
                <%- announcements.title %>
              </h4>
              <p>
                <%- announcements.content %>
              </p>
              <% }else{ %>
                No Announcement Found
                <% } %>
          </div>
        </div>
      </div>
    </div>
