<% layout("layout") -%>
  <div class="col-sm-3" style=" padding: 10px; margin-top: 70px;" overflow-x: hidden;>
    <div class="col-lg-12">
      <% include ../partials/studentpanel %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="container">
      <div class="panel panel-info  col-sm-9" id="myScrollspy" style="padding: 0px; margin-top: 78px;">
        <div class="panel-heading" style="color: #ffffff;">Create Literary Works</div>
        <div class=" form-group ">
          <br>

          <form action="/createliteraryworks" method="POST">
            <div class="form-group" style="padding: 5px;">
              <label for="litNumber" style="color:black; ">Post ID:</label>
              <b>
                <%= (new Date()).getFullYear() %>00000
                  <%= counter %>
              </b>
              <select name="litNumber" class="btn btn-info" style="border-radius:8px; display: none" id="litNumber">
                <option value="<%= (new Date()).getFullYear() %>00000<%= counter %>">
                  <%= (new Date()).getFullYear() %>00000
                    <%= counter %>
                </option>
              </select>
              <label for="usr" style="color:black;">Category:</label>
              <select name="category" class="btn btn-info" style="border-radius:8px;" id="usr">
                <!-- <option value="photojournal">Photo Journal</option> -->
                <option value="editorial">Editorial</option>
                <option value="story">Short Story</option>
                <option value="poem">Poem</option>
              </select>
            </div>
            <div class="form-group" style="padding: 5px;">
              <label for="title" style="color:black;">Title:</label>
              <input placeholder="Write the title...." type="text" name="title" class="form-control" id="title">
            </div>
            <div class="form-group" style="padding: 5px;">
              <label for="content" style="color:black;">Content:</label>
              <textarea style="width:100%; height: 400px;" placeholder="Write a content..." name="content" class="form-control" id="content"></textarea>
            </div>

            <div style="text-align: right;" style="padding: 5px;">
              <button style="width: 100px;" class="btn btn-primary">
                Post</button>
              <button onClick="discard()" type="button" style="width: 100px; margin-right:5px;" class="btn btn-danger">
                Discard</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- //modal -->
  <div class="modal fade " id="myModal " role="dialog ">
    <div class="modal-dialog modal-m ">
      <div class="modal-content ">
        <div class="modal-header ">
          <button type="button " class="close " data-dismiss="modal ">&times;</button>
          <h4 class="modal-title ">Delete News and Announcement</h4>
        </div>
        <div class="modal-body ">
          <p>Are you sure you want to delete?</p>
        </div>
        <div class="modal-footer ">
          <button type="button " class="btn btn-default " data-dismiss="modal ">Yes</button>
          <button type="button " class="btn btn-default " data-dismiss="modal ">No</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade " id="editModal " role="dialog ">
    <div class="modal-dialog modal-m ">
      <div class="modal-content ">
        <div class="modal-header ">
          <button type="button " class="close " data-dismiss="modal ">&times;</button>
          <h4 class="modal-title ">Edit News and Announcement</h4>
        </div>
        <div class="modal-body ">
          <div class="form-group ">
            <label for="usr ">Title:</label>
            <input type="text " class="form-control " id="usr ">
          </div>
          <div class="form-group ">
            <label for="comment ">Content:</label>
            <textarea class="form-control " rows="5 " id="comment "></textarea>
          </div>
        </div>
        <div class="modal-footer ">
          <button type="button " class="btn btn-default " data-dismiss="modal ">Update</button>
          <button type="button " class="btn btn-default " data-dismiss="modal ">Close</button>
        </div>
      </div>
    </div>
  </div>
  </div>